<UserControl x:Class="NBack.ProgressBar"
    xmlns="http://schemas.microsoft.com/client/2007" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="200" Height="40">

	<Grid x:Name="LayoutRoot" Background="White" >
    	<Grid.ColumnDefinitions>
    		<ColumnDefinition Width=".6*" x:Name="GreenPart" />
    		<ColumnDefinition Width=".4*" x:Name="NonGreenPart" />
    	</Grid.ColumnDefinitions>
    	<Rectangle Height="Auto" HorizontalAlignment="Stretch" Grid.Column="0" Margin="0,0,0,0" VerticalAlignment="Stretch">
    		<Rectangle.Fill>
    			<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0" MappingMode="RelativeToBoundingBox">
    				<GradientStop Color="#FF155E07" Offset="0"/>
    				<GradientStop Color="#FF31E40F" Offset="1"/>
    			</LinearGradientBrush>
    		</Rectangle.Fill>
    	</Rectangle>
		<Rectangle Height="Auto" HorizontalAlignment="Stretch" Grid.Column="1" Margin="0,0,0,0" VerticalAlignment="Stretch">
			<Rectangle.Fill>
				<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
					<GradientStop Color="#FF656963"/>
					<GradientStop Color="#FFF1F9ED" Offset="1"/>
				</LinearGradientBrush>
			</Rectangle.Fill>
		</Rectangle>
    </Grid>
</UserControl>
